        "method": "POST",
        "path": "/auth/refresh",
        "description": "Token yenileme",
        "headers": {
          "Authorization": "Bearer <token>"
        },
        "response": {
          "user": {
            "id": "string (UUID)",
            "name": "string",
            "email": "string",
            "avatar": "string | null",
            "role": "string",
            "isActive": "boolean",
            "createdAt": "date",
            "updatedAt": "date"
          },
          "token": "string",
          "tokenType": "Bearer",
